<div class="game-container">
    <a href="/games/collection/game/{{this._id}}">
        <h4 class="game-title">{{this.title}}</h4>
        <img src="{{this.img}}" alt="{{this.title}}-poster" class="game-poster">
        <h5 class="genre">
            {{#each this.genres}}
            {{this}}
            {{/each}}
        </h5>
        <h5 class="platforms">
            {{#each this.plateform}}
            {{this}} /
            {{/each}}
        </h5>
        <div class="horizontal-container spaceevenly">
            <a class="addToCollec" data-id="{{this._id}}"><i class="far fa-plus-square"></i></a>
            <a class="addToFinish" data-id="{{this._id}}"><i class="far fa-check-square"></i></a>
        </div>
    </a>
</div>