<div class="game-alignment">
    <div class="game-container">
        <a href="/games/collection/game/{{this._id}}">
            <h4 class="game-title">{{this.title}}</h4>
            <img src="{{this.img}}" alt="{{this.title}}-poster" class="game-poster">
            <h5 class="genre">
                {{#each this.genres}}
                {{this}} /
                {{/each}}
            </h5>
            <h5 class="platforms">
                {{#each this.plateform}}
                {{this}} /
                {{/each}}
            </h5>
            <div class="add-btn">
                <a class="addToCollec" data-id="{{this._id}}"><i class="far fa-plus-square"></i> <span class="add">Add
                        to Collection</span></a>
            </div>
            <div class="add-btn">
                <a class="addToFinish" data-id="{{this._id}}"><i class="far fa-check-square"></i> <span class="add">Add
                        to Finished Games</span></a>
            </div>
        </a>
    </div>
</div>