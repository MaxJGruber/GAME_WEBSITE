<h1>Welcome to your Collection Page</h1>

<h3>All Your Games</h3>
<ul>
    {{#each user.owned}}
    <a href="/games/collection/game/{{this._id}}">
        <li>{{this.title}}</li>
    </a>
    <p class="del-owned" data-id="{{this._id}}"><i class="far fa-trash-alt"></i></p>

    {{/each}}
</ul>

<h3>All the games you finished</h3>
<ul>
    {{#each user.finished}}
    <a href="/games/collection/game/{{this._id}}">
        <li>{{this.title}}</li>
    </a>
    <p class="del-finished" data-id="{{this._id}}"><i class="far fa-trash-alt"></i></p>
    {{/each}}
</ul>
<h3>Your wishlist</h3>
<ul>
    {{#each user.wishlist}}
    <a href="/games/collection/game/{{this._id}}">
        <li>{{this.title}}</li>
    </a>
    <p class="del-wish" data-id="{{this._id}}"><i class="far fa-trash-alt"></i></a>
        {{/each}}
</ul>