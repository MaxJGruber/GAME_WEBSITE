<div class="form-container">
    <form class="form" action="/user/edit/{{user._id}}" method="POST" enctype="multipart/form-data">
        <h1>Edit {{user.name}} account</h1>
        <label for="name">Name</label>
        <input class="input" type="text" id="name" name="username" value="{{user.username}}">

        <label for="pseudo">Pseudonym</label>
        <input class="input" type="text" id="pseudo" name="pseudo" value="{{user.pseudo}}">

        <label for="age">Age</label>
        <input class="input" type="number" id="age" name="age" value="{{user.age}}">

{{> checkboxListPlatform }}
{{> checkboxListGenre }}

        <label for="img">Profile Picture</label>
        <input class="input" type="file" id="img" name="image">

        <button> Edit </button>

    </form>
</div>